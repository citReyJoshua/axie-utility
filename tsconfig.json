{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "paths": {
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    },
    "baseUrl": ".",
    "strict": true,
    "target": "ES2017",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
